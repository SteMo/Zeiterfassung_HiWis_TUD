<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>zeiterfassung</display-name>
    <!-- Servlet zum AusfÃ¼hren von JUnit-Tests in Tomcat -->
    <context-param>
        <param-name>resteasy.servlet.mapping.prefix</param-name>
        <param-value>/ws</param-value>
    </context-param>
    <filter>
        <filter-name>JOpenId</filter-name>
        <filter-class>de.tud.cs.tk.zeiterfassung.jopenid.OpenIdAuthenticationFilter</filter-class>
        <init-param>
            <param-name>return-to</param-name>
            <param-value>http://localhost:8080/zeiterfassung-0.0.1-SNAPSHOT/JOpenIdTest</param-value>
        </init-param>
        <init-param>
            <param-name>realm</param-name>
            <param-value>http://localhost:8080</param-value>
        </init-param>
        <init-param>
            <param-name>endpoint-name</param-name>
            <param-value>Google</param-value>
        </init-param>
        <init-param>
            <param-name>strict</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter>
        <filter-name>Resteasy</filter-name>
        <filter-class>org.jboss.resteasy.plugins.server.servlet.FilterDispatcher</filter-class>
        <init-param>
            <param-name>javax.ws.rs.Application</param-name>
            <param-value>de.tud.cs.tk.zeiterfassung.ZeiterfassungWS</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>JOpenId</filter-name>
        <init-param>
            <param-name>return-to</param-name>
            <param-value>http://your.web.application/path/here</param-value>
        </init-param>
        <init-param>
            <param-name>realm</param-name>
            <param-value>http://*.your.web.application</param-value>
        </init-param>
        <init-param>
            <param-name>endpoint-name</param-name>
            <param-value>Google</param-value>
        </init-param>
        <init-param>
            <param-name>strict</param-name>
            <param-value>true</param-value>
        </init-param>
        <servlet-name>JOpenIdTest</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>Resteasy</filter-name>
        <url-pattern>/ws/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>de.tud.cs.tk.zeiterfassung.test.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>JOpenIdTest</servlet-name>
        <servlet-class>de.tud.cs.tk.zeiterfassung.test.JOpenIdTest</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>JOpenIdTest</servlet-name>
        <url-pattern>/JOpenIdTest</url-pattern>
    </servlet-mapping>
</web-app>
