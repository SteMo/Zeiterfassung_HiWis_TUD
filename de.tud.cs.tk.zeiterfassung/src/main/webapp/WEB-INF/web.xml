<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
    <display-name>zeiterfassung</display-name>
    <filter>
        <filter-name>JOpenIdFilter</filter-name>
        <filter-class>de.tud.cs.tk.iptk.ws2010_11.jopenid.OpenIdAuthenticationFilter</filter-class>
        <init-param>
            <param-name>return-to</param-name>
            <param-value>http://localhost:8080/zeiterfassung-0.0.1-SNAPSHOT/TestOID</param-value>
        </init-param>
        <init-param>
            <param-name>realm</param-name>
            <param-value>http://localhost:8080/zeiterfassung-0.0.1-SNAPSHOT/TestOID</param-value>
        </init-param>
        <init-param>
            <param-name>endpoint-name</param-name>
            <param-value>Google</param-value>
        </init-param>
        <init-param>
            <param-name>strict</param-name>
            <param-value>true</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>JOpenIdFilter</filter-name>
        <servlet-name>TestOID</servlet-name>
    </filter-mapping>
    <servlet>
        <servlet-name>TestServlet</servlet-name>
        <servlet-class>de.tud.cs.tk.zeiterfassung.test.TestServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TestOID</servlet-name>
        <servlet-class>de.tud.cs.tk.iptk.ws2010_11.sample.TestServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TestServlet</servlet-name>
        <url-pattern>/TestServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TestOID</servlet-name>
        <url-pattern>/TestOID</url-pattern>
    </servlet-mapping>
</web-app>
